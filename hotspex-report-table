/* ================================================
   RESPONSIVE ADJUSTMENTS
   ================================================ */

@media screen and (max-width: 768px) {
  .report-table-vis {
    font-size: 11px;
  }
  
  .report-table-vis thead th,
  .report-table-vis tbody td {
    padding: 8px 6px;
  }
  
  .report-table-vis .header-row th {
    padding: 10px 6px;
  }
}

/* ================================================
   PRINT STYLES
   ================================================ */

@media print {
  .report-table-vis {
    box-shadow: none;
    border: 1px solid #bdc3c7;
  }
  
  .report-table-vis tbody tr:hover {
    background-color: inherit !important;
    box-shadow: none !important;
  }
  
  /* Ensure alternating rows are visible in print */
  .report-table-vis tbody tr:nth-child(even) {
    background-color: #f5f5f5 !important;
  }
}

